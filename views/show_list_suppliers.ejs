<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
  </head>
  <body>
    <div style="display: inline-block">
      <h2><%= title %></h2>
      <a href="/suppliers/add"><button type="button" name="button">Add Supplier</button></a>
    </div>
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Kota</th>
        <th>List Item</th>
        <th>Add Item</th>
        <th>Action</th>
      </tr>
      <% suppliers.forEach((supplier, index) => { %>
        <tr>
          <td><%= supplier.id %></td>
          <td><%= supplier.name %></td>
          <td><%= supplier.kota %></td>
          <td>
              <% if(supplier.Supplieritems.length != 0) { %>
                <ul>
                <% supplier.Items.forEach(supitem => { %>
                  <li><%= supitem.name %></li>
                <% }) %>
                </ul>
              <% } else { %>
                No Item Yet
              <% } %>

          </td>
          <td><a href="/suppliers/<%= supplier.id  %>/additem"><button type="button" name="button">Assign Item</button></a></td>
          <td>
            <a href="/suppliers/edit/<%= supplier.id  %>"><button type="button" name="button">Edit</button></a>
            <a href="/suppliers/delete/<%= supplier.id  %>"><button type="button" name="button">Delete</button></a>
          </td>
        </tr>
      <% }) %>
    </table>
  </body>
</html>
