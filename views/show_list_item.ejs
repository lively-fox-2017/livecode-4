<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>List Item</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/suppliers">Suppliers</a>
    <a href="/items">Items</a>
    <% if(hasOwnProperty('message'))
    {
      %>
      <h2>
        <%= message %>
      </h2>
    <%
   }
   else{}
   %>
    <table border="5">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Code Item</th>
        <th>Action</th>
      </tr>
      <%
        for(var i =0;i<dataItem.length;i++){
          %>
          <tr>
            <td>
              <%= dataItem[i].id %>
            </td>
            <td>
              <%= dataItem[i].name %>
            </td>
            <td>
              <%= dataItem[i].brand %>
            </td>
            <td>
              <%= dataItem[i].codeitem %>
            </td>
            <td>
              <a href="/items/edit/<%= dataItem[i].id %>"> Edit </a>|
              <a href="/items/delete/<%= dataItem[i].id %>"> Delete </a>
            </td>
          </tr>
          <%
        }
      %>
    </table>
    <a href="/items/add">Add new Items</a>
  </body>
</html>
