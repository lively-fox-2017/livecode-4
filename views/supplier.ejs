<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%include partial/menu.ejs%>
    <div class="table">
      <h3>List Suppliers</h3>
      <table>
        <tr>
          <th>No</th>
          <th>ID</th>
          <th>Nama</th>
          <th>Kota</th>
          <th>List Item</th>
          <th>Add Item</th>
          <th>Opsi</th>
        </tr>
        <%suppliers.forEach((supplier, i)=>{%>
          <tr>
            <td><%=i+1%></td>
            <td><%=supplier.id%></td>
            <td><%=supplier.name%></td>
            <td><%=supplier.kota%></td>
            <%if(supplier.Items.length == 0){%>
              <td>No item yet</td>
            <%}else{%>
              <td><%supplier.Items.forEach((item, i)=>{%>
                <%=i+1%>. <%=item.name%><br>
                <%})%></td>
            <%}%>
            <td><a href="/suppliers/<%=supplier.id%>/additem">Assign Item</a></td>
            <td>
              <a href="/suppliers/edit/<%=supplier.id%>">edit</a>
              <a href="/suppliers/delete/<%=supplier.id%>">delete</a>
            </td>
          </tr>
        <%})%>
      </table>
    </div>
    <a href="/suppliers/add">Add Supplier</a>
  </body>
</html>
