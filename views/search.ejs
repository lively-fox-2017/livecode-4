<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Search</title>
  </head>
  <body>
    <h1>Search</h1>
    <a href="/">Return to Home</a><br><br>
    <form class="" action="/search" method="post">
      Name Item :<br>
      <input type="text" name="name" value=""><br>
      Min Price : <br>
      <input type="text" name="min_price" value=""><br>
      Max Price : <br>
      <input type="text" name="max_price" value=""><br><br>
      <button type="submit" name="button">search</button>
    </form>
    <table>
      <thead>
        <th>Id</th>
        <th>Item Name</th>
        <th>Supplier Name</th>
        <th>Price</th>
      </thead>
      <tbody>
        <%let no=0; if (data){data.forEach(rows=>{no++%>
          <tr>
            <td><%=no%></td>
            <td><%=rows.Item.name%></td>
            <td><%=rows.Supplier.nama%></td>
            <td><%=rows.price%></td>
          </tr>
        <%})}%>
      </tbody>
    </table>
  </body>
</html>
