<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Item</title>
  </head>
  <body>
    <% include partials/header.ejs %>
    <% if(hasOwnProperty('message'))
    {
      %>
      <h2>
        <%= message %>
      </h2>
    <%
   }
   else{}
   %>
    <form action="/items/edit/<%= dataItem.id %>" method="post">
      Name : <input type="text" name="name" placeholder="Name" value="<%= dataItem.name %>"><br />
      Brand : <input type="text" name="brand" placeholder="Brand" value="<%= dataItem.brand %>"><br />
      Code Item : <input type="text" name="codeitem" placeholder="Code Item" value="<%= dataItem.codeitem %>"><br />
      <input type="submit" value="SUBMIT"><a href="/items">Cancel</a>
    </form>
  </body>
</html>
