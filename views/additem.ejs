<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Item for Suppliers</title>
  </head>
  <body>
    <table border="1px">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>City</th>
          <th>List Item</th>
        </tr>
      </thead>
      <tbody>
        <%dataItems.forEach(row=>{%>
          <tr>
            <td><%= row.id %></td>
            <td><%= row.brand%></td>
            <td><%= row.kota%></td>
            <td><%= row.name%></td>
          </tr>
        <%})%>
      </tbody>
      </table>
      <form action="/suppliers/additem/<%=dataItems.id%>" method="post">
        List Item:<br>
          <select name="ItemId">
            <%dataItems.forEach(row=>{%>
           <option value="<%=row.id%>"><%= row.name%></option>
            <%})%>
          </select>
        <br>
        Price:<br>
        <input type="text" name="price" placeholder="Price">
        <br><br>
        <input type="submit" value="Submit">
      </form>
  </body>
</html>
