<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%include partial/menu.ejs%>
    <h3>Add Item To Supplier</h3>
    <p>Name: <%=supplier.name%></p>
    <p>kota: <%=supplier.kota%></p>
    <p>Address:</p>
    <h4>List Item</h4>
    <table>
      <%supplier.Items.forEach((item,i)=>{%>
      <tr>
          <td><%=i+1%>. <%=item.name%></td>
      </tr>
      <%})%>
    </table>
    <br>
    <form method="post">
      <select name="ItemId">
        <option value="">Select Item</option>
        <%items.forEach(item=>{%>
          <option value="<%=item.id%>"><%=item.name%></option>
        <%})%>
      </select>
      <input type="text" name="price" placeholder="Price"><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
