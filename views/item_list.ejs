<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Items</title>
  </head>
  <body>
    <h1>Items</h1>
    <a href="/">Return to Home</a>
    <table>
      <thead>
        <th>No</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Code Item</th>
        <th>Supplier</th>
        <th>Options</th>
      </thead>
      <tbody>
        <%let no=0; if (data){data.forEach(rows=>{no++%>
          <tr>
            <td><%=no%></td>
            <td><%=rows.name%></td>
            <td><%=rows.brand%></td>
            <td><%=rows.codeitem%></td>
            <td>
              <%if (rows.Suppliers.length==0){%>
                --No Supplier Yet--
              <%} else {%>
              <%rows.Suppliers.forEach(rowsSupplier=>{%>
                - <%=rowsSupplier.nama%>  @<%=rowsSupplier.SupplierItem.price%><br>
              <%})}%>
            </td>
            <td>
              <a href="/items/edit/<%=rows.id%>">Edit</a>
              <a href="#">|</a>
              <a onclick="return confirm('are you sure to delete this data?')" href="/items/delete/<%=rows.id%>">Delete</a>
            </td>
          </tr>
        <%})}%>
      </tbody>
    </table>
    <form class="" action="/items/add" method="post">
      Name <br>
      <input type="text" name="name" value=""><br>
      Brand <br>
      <input type="text" name="brand" value=""><br>
      Code Item <br>
      <input type="text" name="codeitem" value=""><br><br>
      <button type="submit" name="button">Add Data</button>
    </form>
  </body>
</html>
