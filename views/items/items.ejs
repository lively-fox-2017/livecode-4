<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>PJAP17</title>

  </head>
  <body>
    <div class="container">
      <h2 class="text-center"><strong>TABLE SUPPLIER</strong></h2>
      <div class="text-center">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addModal">
          <i class="fa fa-user-plus"> Add New Item</i>
        </button>
      </div>
      <br>
      <br>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>BRAND</th>
            <th>CODE ITEM</th>
            <th>LIST SUPPLIER</th>
            <th colspan="2" class="text-center">ACTION</th>
          </tr>
        </thead>
        <tbody>
          <% dataItem.forEach(rows => { %>
            <tr>
              <td><%= rows.id %></td>
              <td><%= rows.name %></td>
              <td><%= rows.brand %></td>
              <td><%= rows.codeitem %></td>
              <td><%= rows.supplier_name %></td>
              <td class="text-right">
                <a href="/items/edit/<%= rows.id %>">
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-pencil"> Edit Data</i>
                  </button>
                </a>
              </td>
              <td>
                <a href="/items/delete/<%= rows.id %>">
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-pencil"> Delete Data</i>
                  </button>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- START OF MODAL ( FOR SMALL / LARGE JUST + modal-sm / modal-lg) -->

      <!-- ADD MODAL -->
      <div class="modal fade" id="addModal" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i></button>
              <!-- &times; -->
              <h4 class="modal-title">Form Add Item</h4>
            </div>
            <!-- ACTION POST  WHEN SUBMIT-->
            <form class="" action="/items" method="post">
            <div class="modal-body">
              <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Input Nama Item" required>
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="brand" placeholder="Input Nama Brand" required>
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="codeitem" placeholder="Input Kode Item" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary btn-lg" style="width:100%;"><i class="fa fa-plus"> Add Item</i></button>
            </div>
          </div>

            </form>
            <!-- END OF ACTION POST WHEN SUBMIT -->
          </div>
        </div>
      </div>
      <!-- ADD MODAL -->

        <!-- END OF MODAL -->
    </div>
  </body>
</html>
